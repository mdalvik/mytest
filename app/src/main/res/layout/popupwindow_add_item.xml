<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_280"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/px_10"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/re_chatroom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:background="#22292C" >

        <ImageView
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_10"
            android:src="@drawable/ty_ss_btn" />

        <TextView
            android:id="@+id/tv_contant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_100"
            android:textColor="#fff"
            android:textSize="@dimen/px_35"
            android:text="发起群聊"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#191B1C" />

</com.zhy.autolayout.AutoLinearLayout>
